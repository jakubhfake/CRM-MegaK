<h2>Klient: {{client.name}}</h2>
<table class="header-of-left">
    <tbody>
        <tr>
            <th>
                E-mail
            </th>
            <td>
                <a href="mailto:{{client.email}}" target="_blank">{{client.email}}</a>
            </td>
        </tr>
        <tr>
            <th>
                Imię
            </th>
            <td>
                {{client.name}}
            </td>
        <tr>
            <th>
                Data następnego kontaktu
            </th>
            <td>
                {{client.nextContactAt}}
            </td>
        </tr>
        {{#if client.notes}}
            <tr>
                <th>
                    Notatki
                </th>
                <td>
                    {{client.notes}}
                </td>
            </tr>
        {{/if}}
    </tbody>
</table>